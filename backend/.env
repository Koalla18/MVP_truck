# Database - SQLite for local dev (no Docker needed)
DATABASE_URL=sqlite:///./routa_dev.db

# JWT
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_ALG=HS256
JWT_EXPIRES_MIN=1440

# CORS
# Frontend runs on http://localhost:3000 (python http.server)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080,http://localhost:5173,http://127.0.0.1:5173,http://localhost:8000,http://127.0.0.1:8000

# App
APP_NAME=RoutoX API
ENV=dev
DEBUG=true
API_PREFIX=/api/v1

# Redis (optional - will fallback to memory if not available)
REDIS_URL=redis://localhost:6379/0

# PostgreSQL (for docker-compose when using Docker)
POSTGRES_DB=routox
POSTGRES_USER=routox
POSTGRES_PASSWORD=routox
